    <Color x:Key="Light">#FFF</Color>
    <Color x:Key="Light100">#EEE</Color>
    <Color x:Key="Light200">#DDD</Color>
    <Color x:Key="Light300">#CCC</Color>

    <Color x:Key="Dark">#000</Color>
    <Color x:Key="Dark100">#111</Color>
    <Color x:Key="Dark200">#222</Color>
    <Color x:Key="Dark300">#333</Color>
