<Application x:Class="PresentationLayer.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodel="clr-namespace:PresentationLayer.Wpf.ViewModel"
             xmlns:view="clr-namespace:PresentationLayer.Wpf.View"
             StartupUri="View/MainWindow.xaml">

    <Application.Resources>

        <ResourceDictionary>

            <!--Ajout des styles-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Ressources/Button.xaml"/>
                <ResourceDictionary Source="Ressources/Checkbox.xaml"/>
                <ResourceDictionary Source="Ressources/DataGrid.xaml"/>
                <ResourceDictionary Source="Ressources/Label.xaml"/>
                <ResourceDictionary Source="Ressources/TextBox.xaml"/>
                <ResourceDictionary Source="Ressources/Others.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!--Déclarations des views et des viewmodels-->
            <DataTemplate DataType="{x:Type viewmodel:ConnectionViewModel}">
                <view:ConnectionView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:ConnectionListViewModel}">
                <view:ConnectionListView />
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>

</Application>