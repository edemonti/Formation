<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Bordure contenant des formulaires-->
    <Style x:Key="BorderForm" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="{StaticResource Theme4Color1}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <!--Bordure contenant des popup-->
    <Style x:Key="BorderPopup" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="{StaticResource Theme4Color1}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Padding" Value="1" />
    </Style>

</ResourceDictionary>