<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:PresentationLayer.Translation;assembly=PresentationLayer"
        mc:Ignorable="d"
        Title="{x:Static lang:Lang.ApplicationTitle}"
        Height="500" Width="800">

    <Grid Style="{StaticResource GridApplication}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <!--En-tête de page-->
        <Label Grid.Row="0" Content="{x:Static lang:Lang.ApplicationTitle}" Style="{StaticResource LabelHeader}" />

        <!--Pied de page-->
        <Label Grid.Row="2" Content="{x:Static lang:Lang.ApplicationBy}" Style="{StaticResource LabelFooter}" />

        <!--Container des tâches-->
        <Frame Grid.Row="1" Source="Views/TaskView.xaml" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
    </Grid>

</Window>
