    <!--Style des boutons de validation-->
    <Style x:Key="ButtonSubmit" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource Theme1Color12}" />
        <Setter Property="Foreground" Value="{StaticResource Theme1Color01}" />
        <Setter Property="BorderBrush" Value="{StaticResource Theme1Color09}" />
    </Style>

    <!--Style des boutons d’annulation-->
    <Style x:Key="ButtonCancel" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource Theme1Color12}" />
        <Setter Property="Foreground" Value="{StaticResource Theme1Color04}" />
        <Setter Property="BorderBrush" Value="{StaticResource Theme1Color09}" />
    </Style>

    <!--Style des boutons de validation des opérations-->
    <Style x:Key="ButtonOperation" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource Theme1Color02}" />
        <Setter Property="Foreground" Value="{StaticResource Theme1Color12}" />
        <Setter Property="BorderBrush" Value="{StaticResource Theme1Color01}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Width" Value="auto" />
        <Setter Property="Height" Value="auto" />
    </Style>

    <!--Style des boutons des dropdownMenu-->
    <Style x:Key="ButtonDropdownMenu" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource Theme1Color11}" />
        <Setter Property="Foreground" Value="{StaticResource Theme1Color01}" />
        <Setter Property="BorderBrush" Value="{StaticResource Theme1Color10}" />
        <Setter Property="Margin" Value="1" />
    </Style>

</ResourceDictionary>