<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Message des Popups-->
    <Style x:Key="ScrollViewerMessagePopup" TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource {x:Type ScrollViewer}}">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="MaxHeight" Value="40" />
        <Setter Property="MinHeight" Value="10" />
    </Style>

    <!--Détail des Popups-->
    <Style x:Key="ScrollViewerDetailPopup" TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource {x:Type ScrollViewer}}">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="MaxHeight" Value="100" />
        <Setter Property="MinHeight" Value="10" />
    </Style>

</ResourceDictionary>